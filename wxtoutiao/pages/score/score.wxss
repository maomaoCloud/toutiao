page{
  background-color: rgb(243, 241, 235);
}

.score-data-box{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.score-data-box .score-item{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFF;
  border-radius: 20rpx;
  width: 95%;
  padding: 30rpx 0;
  margin: 10rpx 0rpx;
}

.score-data-box .score-item .head{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 8rpx solid rgb(248,213,79);
}

.score-data-box .score-item .index{
  font-size: 70rpx;
  width: 100rpx;
  text-align: center;
  font-style: italic;
  color: rgb(220,192,177);
  border-right: 5rpx dashed rgb(220,192,177);
  margin-right: 10rpx;
}

.score-data-box .score-item .name-data{
  width: 250rpx;
  font-size: 30rpx;
  border-bottom: 
  2rpx solid #E5E5E5;
  margin: 0 10rpx;
  padding-bottom: 10rpx;
  position: relative;
}

.score-data-box .score-item .name-data .userB{
  position: absolute;
  right: 0;
}

.score-data-box .score-item .score{
font-size: 30rpx;
display: flex;
align-items: center;
}

.score-data-box .score-item .score .star{
  font-size: 40rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}