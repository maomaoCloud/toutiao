.outer{
  width: 100%;
  height: 100%;
  margin: 0 auto;
  margin-top: 20rpx;
}
.inner{
  width: 100%;
  height: 100%;
}
movable-area{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.item{
  width: 20%;
  border: 2rpx solid #EfEfEf;
  text-align: center;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  padding: 10rpx 0;
}

.item:nth-child(4n+4){
  margin-right: 0 !important;
}

.item:nth-child(4n+2){
  margin-right: 30rpx !important;
}

.item .head{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin:10rpx 0;
}

.item text{
  margin: 5rpx 0;
}

.index-first{
  display: inline-block;
  width: 15rpx;
  height: 150rpx;
  background: firebrick;
}

.item-move{
  display: inline-block;
  width: 150rpx;
  height: 60rpx;
  border: 1px solid firebrick;
  position: relative;
  background-color: firebrick;
}

.tips{
  font-size: 24rpx;
  background-color: #fcf8e3;
  padding: 20rpx 0;
  padding-left: 20rpx;
  width: 90%;
  border-radius: 20rpx;
  margin: 0 auto;
  color: #8a6d3b;
  margin-top: 20rpx;
}

.tips .tips-item{
  padding: 5rpx 0;
}

.op-box{
  margin-bottom: 40rpx;
}

.op-box .save-btn {
  margin: 30rpx auto;
  background-color: #bd2529;
  color: #fff;
  width: 90%;
  margin-bottom: 15rpx;
}