<view class='top'>
  <view class='club'>
    <view class="scrool-left">
      <scroll-view scroll-x="true" style="white-space: nowrap; display: block" class="showmian">
        <view bindtap="chooseItem" class="w25 hovertxt" wx:for="{{ clubData }}" wx:key="id" data-index="{{index}}">
          <view class='club-item'>
            <view class='border'>
              <image src='{{ item.img }}' lazy-load='{{ true }}'></image>
            </view>
            <text>{{ item.name }}</text>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>

  <image class='bottom-image' mode="widthFix" src='/resource/bg-bottom.png'></image>
</view>
<view class='padding-holder'></view>

<view class='club-list'>
  

  <view class='club-item'>
    <view class='info'>
      <image class='img' src='https://modao.cc/uploads3/images/2349/23495617/raw_1533282849.png' lazy-load="{{ true }}" mode="widthFix"></image>
      <view class='detail'>
        <view class='line-data'>
          <text class='name'>虞山派掼蛋俱乐部</text>
