            <image class='icon' src='/resource/location.png'></image>
            <text class='location'>江苏省苏州市高新区</text>
          </view>
        </view>

        <view class='line-data mid-data'>
          <view class='star s5'>★★★★★</view>
          <text class='active'>已组织111场活动</text>
