page {
  background-color: #fff;
}

.addActive-layer-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.addActive-layer-box .layer-data {
  width: 100%;
}

.addActive-layer-box .addActive-btn {
  background-color: #bd2529;
  color: #fff;
  width: 90%;
  margin-bottom: 15rpx;
}

.addActive-layer-box .op-box {
  width: 100%;
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.addActive-layer-box .op-box view {
  width: 33.3333%;
  color: #fff;
  text-align: center;
  padding: 0 20rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.addActive-layer-box .op-box .apply {
  background-color: #bd2529;
  text-align: center;
  height: 100rpx;
}

.addActive-layer-box .op-box .goto {
  background-color: #9c2125;
  text-align: center;
  height: 100rpx;
}

.addActive-layer-box .op-box .share {
  background-color: #2579bd;
  text-align: center;
}

.addActive-layer-box .op-box .share button {
  background: transparent;
  border: none;
  color: #fff;
  padding: 0;
  height: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.addActive-layer-box .op-box .share button::after {
  border: none;
}

.addActive-layer-box .layer-data .add-pic {
  width: 100%;
  background-color: rgb(80, 28, 32);
  display: flex;
  align-items: center;
  justify-content: center;
}

.addActive-layer-box .layer-data .add-pic .image-holder {
  width: 60rpx;
  padding: 10rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}

.addActive-layer-box .layer-data .add-pic .banner-image {
  width: 100%;
}

.addActive-layer-box .layer-data .add-pic text {
  font-size: 50rpx;
  letter-spacing: 3rpx;
  color: #fff;
  padding: 100rpx 0;
}

.placeholder {
  font-size: 26rpx;
}

.input-item {
  display: flex;
  padding-bottom: 10rpx;
  margin: 5rpx 10rpx;
}

.input-item .vTitle {
  font-size: 25rpx;
  color: #666;
}

.input-item .theme {
  color: #000;
  font-size: 30rpx;
}

.input-item .input-value {
  display: flex;
  font-size: 26rpx;
  justify-content: center;
  align-items: center;
}

.input-item .input-value .split {
  margin: 0 15rpx;
}

.input-item .input-value .time-picker {
  margin-left: 10rpx;
}

.input-box {
  display: flex;
  flex-direction: column;
  margin: 20rpx 40rpx;
}

.input-box .ititle {
  background-color: #ccc;
  color: #fff;
  text-align: center;
  padding: 10rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.input-box .icontent {
  height: 220rpx;
  font-size: 26rpx;
  border: 3rpx solid #ccc;
}

.input-box .icontent textarea {
  width: 95%;
  margin: 10rpx auto;
  height: 200rpx;
}

.info-box .contact {
  display: flex;
  flex-direction: column;
}

.info-box .contact .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 60%;
}

.info-box .contact .info .info-item {
  margin: 15rpx 15rpx;
}

.info-box .contact .info .info-item text {
  float: left;
  font-size: 30rpx;
}

.info-box .contact .info .info-item input {
  border-bottom: 5rpx solid #ccc;
  width: 230rpx;
  float: right;
  font-size: 26rpx;
}

.info-box .contact .upload-wx {
  width: 300rpx;
  height: 300rpx;
  font-size: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 3rpx solid #ccc;
  margin: 15rpx 0;
  position: relative;
  padding: 15rpx;
  right: -15rpx;
}

.info-box .contact .upload-wx image {
  width: 300rpx;
  height: 300rpx;
}

.input-box .fee {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  background-color: #E47370;
  color: #FFF;
  letter-spacing: 2rpx;
}

.input-box .fee input {
  width: 200rpx;
  border-bottom: 5rpx solid #ccc;
  text-align: center;
}

.padding-bootom-holder {
  padding-bottom: 100rpx;
}

