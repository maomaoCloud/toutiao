page {
  background-color: #e9e9e9;
}

.nav {
  width: 100%;
  display: flex;
  position: fixed;
  background-color: #bd2529;
  color: #e1e1e1;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  z-index: 9999;
}

.nav .nav-item {
  width: 25%;
  text-align: center;
  padding-bottom: 20rpx;
}

.nav .active {
  border-bottom: 6rpx solid #fff;
  color: #fff;
}

.padding-holder {
  padding-top: 20rpx;
}

.apply {
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 60rpx 15rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  color: rgb(61, 66, 68);
}

.apply .top {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: relative;
  margin-bottom: 80rpx;
}

.apply .top .addTime {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 20rpx;
  font-size: 30rpx;
  top: 20rpx;
}

.apply .top .addTime image {
  width: 45rpx;
  height: 45rpx;
}

.apply .top .addTime text {
  margin-left: 10rpx;
}

.apply .top .apply-statu {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 30rpx;
  color: rgb(255, 90, 40);
  letter-spacing: 2rpx;
}

.apply .center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}

.apply .center .headImg {
  width: 100%;
  margin-bottom: 20rpx;
}

.apply .center .theme {
  font-size: 30rpx;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
}

.apply .center .detail {
  display: flex;
  width: 100%;
}

.apply .center .detail .address-statu {
  display: flex;
  flex-direction: column;
  width: 70%;
  align-items: left;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  padding-left: 20rpx;
  line-height: 40rpx;
  color: #999;
}

.apply .center .detail .price-info {
  width: 30%;
  color: rgb(255, 87, 41);
  font-size: 40rpx;
}

.apply .center .detail .price-info .icon {
  font-size: 60rpx;
}

.apply .other-info{
  width: 100%;
  font-size: 28rpx;
  text-align: right;
  position: relative;
  right: 10rpx;
  margin-bottom: 20rpx;
}

.apply .opt-box{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: right;
}

.apply .opt-box button{
  background-color: transparent;
  width: 200rpx;
  border-radius: 80rpx;
  border: 2rpx solid #CCC;
  margin: 20rpx 20rpx;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.apply .opt-box button::after{
  content: "";
  border: none;
}
