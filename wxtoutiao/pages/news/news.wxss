page {
  background-color: #e1e1e1;
}

.news-list {
  width: 100%;
}

.news-list .news-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #FFF;
  margin-bottom: 40rpx;
}

.news-list .news-item .date-box {
  width: 100%;
  text-align: left;
  display: flex;
  align-items: center;
}

.news-list .news-item .date-box .icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.news-list .news-item .date-box .date {
  color: #101010;
  font-size: 16px;
}

.news-list .news-item navigator {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.news-list .news-item navigator .title {
  font-size: 18px;
}

.news-list .news-item navigator .img{
  width: 100%;
}